<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title></title>
</head>

<body>
    <div class='erros'>
        <%if(errosValidacao){%>
            <ul>
                <%for(var i=0;i<errosValidacao.length;i++){%>
                    <li>
                        <%=errosValidacao[i].param%> -
                            <%=errosValidacao[i].msg%>
                    </li>
                    <%}%>
            </ul>
            <%}%>
    </div>
    <form class="" action="/produtos/salvar" method="post">
        <div>
            <label for="titulo">Titulo</label>
            <input type="text" id="titulo" name="titulo" placeholder="Titulo" value="<%= produto.titulo %>" />
        </div>
        <div>
            <label for="titulo">Preço</label>
            <input type="text" id="preco" name="preco" placeholder="Preço" value="<%= produto.preco %>" />
        </div>
        <div>
            <label for="titulo">Descrição</label>
            <textarea cols="10" rows="10" type="text" id="descricao" name="descricao" placeholder="Descricao"><%= produto.descricao %></textarea>
        </div>
        <input type="submit" value="gravar" />
    </form>
</body>

</html>
